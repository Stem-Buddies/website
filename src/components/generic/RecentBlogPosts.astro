---
import { getCollection } from 'astro:content';
import BlogList from '../blog/BlogList.astro';
import { Card } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';

interface Props {
  count?: number;
}

const { count } = Astro.props;

const blogPosts = await getCollection('blog');
const boffinPosts = await getCollection('brilliantBoffins');

const allPosts = [...blogPosts, ...boffinPosts].sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()).slice(0, count ?? 3);
---

<section class='mt-8'>
  <Card>
    <div class='flex justify-between items-start'>
      <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
        Recent Blogposts
      </h2>
      <div class='hidden md:block'>
        <Button href='/blog/'>Go to blog &rarr;</Button>
      </div>
      <div class='block md:hidden'>
        <Button href='/blog/'>to blog</Button>
      </div>
    </div>
    <BlogList posts={allPosts} />
  </Card>
</section>
