---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Default.astro';
import BlogList from '@components/brilliantBoffins/BlogList.astro';

const posts = await getCollection('brilliantBoffins').then((collection) =>
  collection.reverse()
);
---

<Layout
  title='Blog'
  description='Brilliant Boffins: Discover Amazing Scientists!'
  pageTitle='Brilliant Boffins'
>
  <main class='bg-green p-6'>
    <BlogList posts={posts} />
  </main>
</Layout>
