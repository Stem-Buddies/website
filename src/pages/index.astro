  { name: 'Bubbly Experiments', url: '/tags/bubbly-experiments' },
  { name: 'Flight Fanatics', url: '/tags/flight-fanatics' },
];

function getRandomStemLabels(count = 8) {
  // Create a copy of the original array to avoid modifying it
  const shuffled = [...stemLabels];

  // Fisher-Yates shuffle algorithm
  for (let i = shuffled.length - 1; i > 0; i--) {
    const j = Math.floor(Math.random() * (i + 1));
    [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
  }

  // Return the first 'count' elements
  return shuffled.slice(0, count);
}

// Example usage:
const randomEightLabels = getRandomStemLabels();
